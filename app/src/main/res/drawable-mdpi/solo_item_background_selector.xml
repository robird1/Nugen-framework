<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the selection is not based on the "best match," but simply the first item that meets the minimum criteria of the state. -->
    <item android:state_window_focused="false" android:drawable="@android:color/transparent" />
    <item android:state_focused="true" 	android:drawable="@drawable/solo_item_focused" />  
    <item android:state_pressed="true" android:drawable="@color/light_brown" />
    <item android:drawable="@color/background"/>

</selector>