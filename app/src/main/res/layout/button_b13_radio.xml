<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_b13_radio_relative"
    android:layout_width="@dimen/dim_button_width_b1_b17"
    android:layout_height="@dimen/dim_button_height_b1_b17" >

    <RelativeLayout
        android:id="@+id/id_button_white_field"
        android:layout_width="@dimen/dim_button_white_field_width"
        android:layout_height="@dimen/dim_button_height_b1_b17"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_white_to_brown_click"
        android:clickable="true"
        android:onClick="b13_click"
>

        <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
            android:id="@+id/id_b13_radio_text"
            style="@style/st_font_Second_Line"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="86dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Manual on Micropumpe"
            android:textColor="@color/main_grey"
/>

                

        <RadioButton
            android:id="@+id/id_b13_chkb"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:button="@drawable/radio_button_color"
            android:clickable="false"
            android:linksClickable="false"
            android:selectAllOnFocus="true"
            android:text="new checkbox" />

        <ImageView
            android:id="@+id/id_b13_img2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="42dp"
            android:contentDescription="@string/cd_button_icon"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:src="@drawable/error_75x75" />

</RelativeLayout>

</RelativeLayout>