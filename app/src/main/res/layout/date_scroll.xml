<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:background="@color/background"
    android:orientation="vertical" 
    android:id="@+id/id_datescroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"  >
    
    <ImageView
        android:id="@+id/id_ds_img_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="6dp"
        android:clickable="true"
        android:contentDescription="@string/cd_leftallow"
        android:onClick="left_click"
        android:src="@drawable/datescroll_back_active" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="6dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
                android:id="@+id/id_ds_title1"
                style="@style/st_font_SmallTitle_bold"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:contentDescription="@string/cd_label1"
                android:gravity="center|start"
                android:maxLines="1"
                android:textColor="@color/main_grey" />

            <ImageView
                android:id="@+id/id_ds_icon_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="3dp"
                android:layout_marginStart="0dp"
                android:layout_weight="0.25" />

            <ImageView
                android:id="@+id/id_ds_icon_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginStart="3dp"
                android:layout_weight="0.25" />

            <ImageView
                android:id="@+id/id_ds_icon_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginStart="3dp"
                android:layout_weight="0.25" />

            <ImageView
                android:id="@+id/id_ds_icon_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginStart="3dp"
                android:layout_weight="0.25" />

        </LinearLayout>

        <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
            android:id="@+id/id_ds_title2"
            style="@style/st_font_SmallTitle"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:contentDescription="@string/cd_Label2"
            android:gravity="center|start"
            android:maxLines="1"
            android:textColor="@color/main_grey"
            android:width="156dp" />

            </LinearLayout>

    <ImageView
        android:id="@+id/id_ds_img_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="6dp"
        android:clickable="true"
        android:contentDescription="@string/cd_rightallow"
        android:onClick="right_click"
        android:src="@drawable/datescroll_forward_active" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/lad20_line"
        android:orientation="horizontal" />
</LinearLayout>