<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:customfont="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_button_white_field"
        android:layout_width="@dimen/dim_button_white_field_width"
        android:layout_height="@dimen/dim_button_height_b1_b17"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:background="@drawable/bg_white_to_brown_click"
        android:clickable="true"
        android:minHeight="@dimen/dim_button_height_b1_b17"
        android:minWidth="@dimen/dim_button_white_field_width"
        android:onClick="b3_click" >

        <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
            android:id="@+id/id_b3_text"
            style="@style/st_font_Default"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="26dp"
            android:layout_marginStart="22dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Forgot Text?"
            android:textColor="@color/main_grey"
            android:width="217dp" />

        <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
            android:id="@+id/id_b3_text2"
            style="@style/st_font_Second_Line"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/id_b3_text"
            android:gravity="right"
            android:maxLines="1"
            android:text="Second"
            android:textColor="@color/main_grey" />

</RelativeLayout>