<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/id_button_white_field"
        style="@style/st_button_vertical_default_margin_noori"
        android:clickable="true"
        android:gravity="center|top"
        android:onClick="b1_click" >

        <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
            android:id="@+id/id_b1_text"
            style="@style/st_button_b1_line1"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/cd_uptext"
            android:text="Forgot text?"
            android:textColor="@color/main_grey" />

        <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
            android:id="@+id/id_b1_text2"
            style="@style/st_button_b1_line2"
            android:layout_below="@id/id_b1_text"
            android:layout_marginTop="-5dp"
            android:contentDescription="@string/cd_downtext"
            android:text="Second"
            android:textColor="@color/main_grey" />

        </RelativeLayout>

</LinearLayout>