<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/id_status_res_img"
        android:layout_width="@dimen/dim_splash_width"
        android:layout_height="@dimen/dim_splash_height"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@color/background"
        android:baselineAlignBottom="true"
        android:src="@drawable/splash_screen_logo" />
    
    <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
        android:id="@+id/id_statusbg"
        style="@style/st_font_Copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="2"
        android:paddingBottom="15dp"
        android:text="@string/txt_accuchekcopyright"
        android:width="260dp"
/>

</RelativeLayout>
