<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/warning_bar2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/warning_btn_1"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="2dp"
        android:background="@drawable/warning_button_1_color"
        android:contentDescription="@string/txt_no"
        android:onClick="warningClick_btn1"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/warning_btn_2"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/warning_button_1_color"
        android:contentDescription="@string/txt_yes"
        android:onClick="warningClick_btn2"
        android:textColor="@color/white" />

</LinearLayout>