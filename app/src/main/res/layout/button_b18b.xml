        android:id="@+id/id_button_white_field"
        android:layout_width="288dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:onClick="b18b_click" >

        <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
            android:id="@+id/id_b18b_text"
            style="@style/st_font_SmallTitle"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Forgot Text?"
            android:textColor="@color/main_grey"
            android:width="217dp" />
        
            <RelativeLayout
                android:id="@+id/id_button_b18b_insertion"
                android:layout_width="288dp"
                android:layout_height="51dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

