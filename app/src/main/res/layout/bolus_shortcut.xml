<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_button_white_field"
    android:layout_width="320dp"
    android:layout_height="51dp"
    android:background="@drawable/bg_background_to_brown_click"
    android:clickable="true"
    android:minHeight="51dp" >

    <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
        android:id="@+id/id_bolus_short_title"
        style="@style/st_font_Default"
        android:layout_width="244dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:gravity="center|start"
        android:height="51dp"
        android:lines="1"
        android:maxLines="2"
        android:minHeight="51dp"
        android:minLines="1"
        android:text="New Bolus"
        android:textColor="@color/main_grey" />

    <ImageView
        android:id="@+id/id_bolus_short_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/id_bolus_short_title"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:src="@drawable/plus_grey" />

</RelativeLayout>