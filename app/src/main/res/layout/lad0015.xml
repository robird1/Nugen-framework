<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lad0015_relativeLayout_all"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/background" >

    <TextView
        android:layout_width="320dp"
        android:layout_height="355dp"
        android:background="@drawable/background_6" />

    <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
        android:id="@+id/id_lad0015_text_headline"
        style="@style/st_font_Default"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="302dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="38dp"
        android:gravity="bottom|start"
        android:maxLines="3"
        android:maxWidth="216dp"
        android:textColor="@color/main_grey" />

    <ScrollView
        android:id="@+id/lad0015_scroll"
        android:layout_width="@dimen/dim_button_width_b1_b17"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="111dp"
        android:layout_weight="1"
        android:scrollbars="none" >

        <TableLayout
            android:id="@+id/lad0015_tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dim_menuspace_left_right_top" >
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lad0015_lower_ab"
        android:layout_width="@dimen/dim_lower_ab_width"
        android:layout_height="@dimen/dim_lower_ab_height"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />

</RelativeLayout>