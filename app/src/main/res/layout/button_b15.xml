<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_b15_relative"
    android:layout_width="@dimen/dim_button_width_b1_b17"
    android:layout_height="@dimen/dim_button_height_b1_b17" >

    <RelativeLayout
        android:id="@+id/id_button_white_field"
        android:layout_width="@dimen/dim_button_white_field_width"
        android:layout_height="@dimen/dim_button_height_b1_b17"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_white_to_brown_click"
        android:clickable="true"
        android:onClick="b15_click" >

        <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
            android:id="@+id/id_b15_text"
            style="@style/st_font_Second_Line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="26dp"
            android:layout_marginStart="105dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Forgot Text?"
            android:textColor="@color/main_grey"
            android:width="163dp" />

        <CheckBox
            android:id="@+id/id_b15_chkb"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:button="@drawable/check_box_color"
            android:text="new checkbox" />

        <ImageView
            android:id="@+id/id_b15_img2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="42dp"
            android:contentDescription="@string/cd_button_icon"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:src="@drawable/error_75x75" />

        <ImageView
            style="@style/st_button_dvider_brown"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="91dp" />
    </RelativeLayout>

</RelativeLayout>