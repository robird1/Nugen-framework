<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="282dp"
    android:layout_height="79dp"
    android:layout_marginTop="31dp" >

    <!--
         According to Android centering engine we have to start
    	at -5dp from top. Otherwise the given dimension wont fit.
    	And the 3rd line will get cur on the letter 'g'   -->

    <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
        android:id="@+id/warning_title_text"
        style="@style/st_font_Warning_Title"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="-5dp"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:textColor="@color/main_grey"
        android:width="156dp" />

    <ImageView
        android:id="@+id/warning_img1"
        android:layout_width="@dimen/dim_warning_img_width"
        android:layout_height="@dimen/dim_warning_img_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="38dp" />

</RelativeLayout>