<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:id="@+id/picker4_rel"
    android:layout_width="@dimen/dim_picker_width"
    android:layout_height="@dimen/dim_picker_height"
    android:layout_gravity="center"
    android:background="@color/background" >

    <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
        android:id="@+id/picker4_title_row3"
        style="@style/st_font_Picker"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="222dp"
        android:background="@drawable/bg_clockbox_white_to_brown"
        android:clickable="true"
        android:contentDescription="@string/cd_edit3"
        android:gravity="center"
        android:lines="1"
        android:onClick="p4_row3_click"
        android:text="2014"
        android:textColor="@drawable/bg_clockbox_maingrey_to_white" />

    <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
        android:id="@+id/picker4_title_row2"
        style="@style/st_font_Picker"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="142dp"
        android:layout_toEndOf="@+id/id_picker4_img1"
        android:background="@drawable/bg_clockbox_white_to_brown"
        android:clickable="true"
        android:contentDescription="@string/cd_edit2"
        android:gravity="center"
        android:lines="1"
        android:onClick="p4_row2_click"
        android:text="May"
        android:textColor="@drawable/bg_clockbox_maingrey_to_white" />
    
        <com.accu_chek.solo_m.rcapp.application.gui.ui.FontManager
            android:id="@+id/picker4_title_row1"
            style="@style/st_font_Picker"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="64dp"
            android:layout_toEndOf="@+id/id_picker4_img1"
            android:background="@drawable/bg_clockbox_white_to_brown"
            android:clickable="true"
            android:contentDescription="@string/cd_edit1"
            android:gravity="center"
            android:lines="1"
            android:onClick="p4_row1_click"
            android:text="23"
            android:textColor="@drawable/bg_clockbox_maingrey_to_white" />

    <ImageView
        android:id="@+id/id_picker4_img1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="142dp"
        android:background="@drawable/bg_background_to_brown_click"
        android:clickable="true"
        android:contentDescription="@string/cd_minusbutton"
        android:onClick="left_icon_click"
        android:src="@drawable/minus" />

    <ImageView
        android:id="@+id/id_picker4_img2"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="142dp"
        android:background="@drawable/bg_background_to_brown_click"
        android:clickable="true"
        android:contentDescription="@string/cd_plusbutton"
        android:onClick="right_icon_click"
        android:src="@drawable/plus_70x70px" />

</RelativeLayout>